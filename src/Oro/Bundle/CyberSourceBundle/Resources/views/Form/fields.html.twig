{% block oro_cybersource_settings_widget %}
    {% import '@OroUI/macros.html.twig' as ui %}
    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.cybersource.settings.form.groups.display_options.title'|trans }}</span>
        </h5>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.labels.tooltip', {}, 'right') }}
                {{ form_label(form.labels) }}
            </div>
            <div class="controls">
                {{ form_widget(form.labels) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.short_labels.tooltip', {}, 'right') }}
                {{ form_label(form.shortLabels) }}
            </div>
            <div class="controls">
                {{ form_widget(form.shortLabels) }}
            </div>
        </div>
    </fieldset>
    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.cybersource.settings.form.groups.integration.title'|trans }}</span>
        </h5>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.method.tooltip', {}, 'right') }}
                {{ form_label(form.cbsMethod) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsMethod) }}
            </div>
        </div>
        {{ form_row(form.cbsTestMode) }}
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.merchant_id.tooltip', {}, 'right') }}
                {{ form_label(form.cbsMerchantId) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsMerchantId) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.merchant_descriptor.tooltip', {}, 'right') }}
                {{ form_label(form.cbsMerchantDescriptor) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsMerchantDescriptor) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.profile_id.tooltip', {}, 'right') }}
                {{ form_label(form.cbsProfileId) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsProfileId) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.access_key.tooltip', {}, 'right') }}
                {{ form_label(form.cbsAccessKey) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsAccessKey) }}
                {{ form_errors(form.cbsAccessKey) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.api_key.tooltip', {}, 'right') }}
                {{ form_label(form.cbsApiKey) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsApiKey) }}
                {{ form_errors(form.cbsApiKey) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.api_secret_key.tooltip', {}, 'right') }}
                {{ form_label(form.cbsApiSecretKey) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsApiSecretKey) }}
                {{ form_errors(form.cbsApiSecretKey) }}
            </div>
        </div>
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ ui.tooltip('oro.cybersource.settings.secret_key.tooltip', {}, 'right') }}
                {{ form_label(form.cbsSecretKey) }}
            </div>
            <div class="controls">
                {{ form_widget(form.cbsSecretKey) }}
            </div>
        </div>
    </fieldset>

    <fieldset class="form-horizontal">
        <h5 class="user-fieldset">
            <span>{{ 'oro.cybersource.settings.form.groups.other.title'|trans }}</span>
        </h5>
        {{ form_rest(form) }}
    </fieldset>
{% endblock %}

{% block oro_cybersource_credit_card_expiration_date_widget -%}
    {% set validation = {
        'credit-card-expiration-date-not-blank': {'message': 'oro.payment.validation.expiration_date', 'payload': null},
        'credit-card-expiration-date': {'message': 'oro.payment.validation.month', 'payload': null}
    }
    %}
    <div {{ block('widget_attributes') }} data-validation="{{ validation|json_encode }}">
        <div class="{{ class_prefix }}-form__select-container">
            <div class="{{ class_prefix }}-form__select {{ class_prefix }}-form__select--exp-month">
                {{ form_widget(form.month, {'attr': {
                    'data-expiration-date-month': true,
                    'autocomplete': 'cc-exp-month'
                }}) }}
            </div>
            <div class="{{ class_prefix }}-form__select {{ class_prefix }}-form__select--exp-year">
                {{ form_widget(form.year, {'attr': {
                    'data-expiration-date-year': true,
                    'autocomplete': 'cc-exp-year'
                }
                }) }}
            </div>
        </div>
    </div>
{%- endblock %}
